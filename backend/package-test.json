{
  "name": "yallacatch-backend",
  "version": "1.0.0",
  "description": "YallaCatch! Backend API - Production Ready",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "migrate": "tsx scripts/migrate.ts",
    "seed": "tsx scripts/seed.ts",
    "seed:test": "tsx scripts/seed.ts --test-data --size=small",
    "seed:clear": "tsx scripts/seed.ts --clear",
    "generate-keys": "tsx scripts/generate-keys.ts",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.0",
    "fastify": "^4.28.1",
    "mongoose": "^8.4.1",
    "ioredis": "^5.4.1",
    "argon2": "^0.40.3",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8",
    "nanoid": "^5.0.7",
    "winston": "^3.13.0",
    "rate-limiter-flexible": "^5.0.3",
    "nodemailer": "^6.9.13",
    "twilio": "^5.2.2",
    "firebase-admin": "^12.1.0",
    "@aws-sdk/client-s3": "^3.600.0",
    "axios": "^1.7.2",
    "sharp": "^0.33.4",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/multer": "^1.4.11",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.4.5",
    "tsx": "^4.15.6",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "jest-junit": "^16.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "jest-serializer-path": "^0.1.15",
    "mongodb-memory-server": "^9.4.0",
    "redis-memory-server": "^0.10.0",
    "supertest": "^7.0.0",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "prettier": "^3.3.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yallacatch/backend.git"
  },
  "keywords": [
    "yallacatch",
    "backend",
    "api",
    "fastify",
    "mongodb",
    "redis",
    "typescript",
    "geolocation",
    "gamification"
  ],
  "author": "YallaCatch Team",
  "license": "UNLICENSED",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "jest-sonar": {
    "reportPath": "coverage",
    "reportFile": "sonar-report.xml",
    "indent": 2
  }
}
